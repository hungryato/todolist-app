{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
        "@/*": ["*"],
        "@controllers/*": ["controllers/*"],
        "@models/*": ["models/*"],
        "@routes/*": ["routes/*"],
    },
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}